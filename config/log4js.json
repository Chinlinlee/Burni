{
    "appenders": {
        "burni-info": {
            "type": "file",
            "filename": "log/burni-info.log",
            "maxLogSize": 10485760,
            "numBackups": 3
        },
        "burni-error": {
            "type": "file",
            "filename": "log/errors.log"
        },
        "errors": {
            "type": "logLevelFilter",
            "level": "ERROR",
            "appender": "burni-error"
        },
        "infos": {
            "type": "logLevelFilter",
            "level": "INFO",
            "maxLevel": "INFO",
            "appender": "burni-info"
        },
        "console": {
            "type": "console"
        }
    },
    "categories": {
        "default": {
            "appenders": [
                "infos",
                "errors",
                "console"
            ],
            "level": "DEBUG"
        }
    }
}